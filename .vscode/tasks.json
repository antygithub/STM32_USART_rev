    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "make clean;make",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Updata",
            "type": "shell",
            "command": "make;make updata;make reset",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Reset",
            "type": "shell",
            "command": "make reset",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}